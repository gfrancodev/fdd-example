{
    "files": [],
    "references": [
      { "path": "./tsconfig.app.json" },
      { "path": "./tsconfig.node.json" }
    ],
    "include": [
        "./src/**/*",
        "./src/core/@types/*",
        "./src/feature/*.d.ts"
    ],
    "compilerOptions": {
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types",
            "./src/core/@types"
        ],
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "noImplicitAny": false,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "allowJs": true,
        "noUnusedLocals": false,
        "strictNullChecks": false
    }
}