{
    "include": [
        "./src/**/*",
        "./src/core/@types/*",
        "./src/feature/*.d.ts"
    ],
    "compilerOptions": {
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "typeRoots": [
            "node_modules/@types",
            "./src/core/@types"     
          ],
        "jsx": "react-jsx",                
        "paths": {
            "@/*": ["./src/*"]
          }
    }
}